{
  "extends": "@ljharb/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",

    // ←←← TO JEST KLUCZOWE!
    "baseUrl": ".",
    "paths": {
      "@ljharb/tsconfig": ["node_modules/@ljharb/tsconfig/tsconfig.json"]
    }
  },
  "include": ["./src", "./**/*.{ts,tsx,js,jsx}"],
  "exclude": ["node_modules", "dist"]
}